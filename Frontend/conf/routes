
# Routes
# This file defines all application routes (Higher priority routes first)
# ~~~~

# An example controller showing a sample home page
GET     /                           controllers.HomeController.index()
GET     /login                      controllers.HomeController.loginHandler()

GET     /signup                     controllers.HomeController.signup()

GET     /register                   controllers.HomeController.signupHandler()

GET     /resetpassword              controllers.HomeController.passwordReset()

GET     /reset                      controllers.HomeController.passwordResetHandler()


# Map static resources from the /public folder to the /assets URL path
GET     /assets/*file               controllers.Assets.at(path="/public", file)

GET     /taForm                         controllers.HomeController.taForm()

GET     /SubmitTA                       controllers.HomeController.TaSubmitHandler()
